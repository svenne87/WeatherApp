<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:resizeMode="horizontal|vertical"
    android:layout_margin="4dp"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="3dip"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/temperature"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Â° C"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/weather_image"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="160px"
            android:layout_width="160px"
            android:src="@drawable/weezle_cloud"/>

    </LinearLayout>

    <Button
        android:id="@+id/settings_button"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_below="@id/thumbnail"
        android:background="@drawable/ic_action_settings"/>

    <TextView
        android:id="@+id/city"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/settings_button"
        android:text="City"
        android:layout_below="@id/thumbnail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="Date"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/wind"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:text="Wind m/s"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/precipitation"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:text="Rain mm"
        android:textStyle="bold"
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/update_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="115dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/update_button"
        android:background="@drawable/ic_action_refresh"
        android:layout_height="80px"
        android:layout_width="80px"
        android:layout_marginTop="5dp"
        android:layout_below="@id/update_text"
        android:layout_alignParentRight="true"/>

</RelativeLayout>